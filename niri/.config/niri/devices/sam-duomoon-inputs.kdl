// Zenbook Duo per-screen digitizer mapping (niri PR #1856)
// ELAN9008 = top screen (eDP-1), ELAN9009 = bottom screen (eDP-2)
input {
    tablet "ELAN9008:00 04F3:425B Stylus" {
        map-to-output "eDP-1"
    }
    tablet "ELAN9009:00 04F3:425A Stylus" {
        map-to-output "eDP-2"
    }
    touch "ELAN9008:00 04F3:425B" {
        map-to-output "eDP-1"
    }
    touch "ELAN9009:00 04F3:425A" {
        map-to-output "eDP-2"
    }
}
