#!/bin/bash

PLUGIN_DIR="$HOME/.config/sketchybar/plugins"

# Bar Appearance
sketchybar --bar \
    height=32 \
    position=top \
    y_offset=0 \
    margin=0 \
    corner_radius=0 \
    blur_radius=0 \
    color=0xff1e1e2e \
    padding_left=16 \
    padding_right=16

# Default Values
sketchybar --default \
    updates=when_shown \
    drawing=on \
    cache_scripts=on \
    icon.font="Hack Nerd Font:Bold:16.0" \
    icon.color=0xffffffff \
    icon.highlight_color=0xffffffff \
    label.font="Hack Nerd Font:Regular:13.0" \
    label.color=0xffffffff

# Add workspace event
sketchybar --add event aerospace_workspace_change

# Left Side Items (Workspaces)
SPACE_ICONS=("󰊯" "󰭹" "󰆍" "󰈙" "" "󰄨" "" "" "󰳪")

# Create a mapping of workspaces to their monitor's NSScreen ID
# This ensures workspace items only appear on their assigned monitor
declare -A workspace_to_display

# Get all monitors and their workspaces
monitor_count=0
for monitor_id in $(aerospace list-monitors --format "%{monitor-appkit-nsscreen-screens-id}"); do
    monitor_count=$((monitor_count + 1))
    for ws in $(aerospace list-workspaces --monitor "$monitor_count"); do
        workspace_to_display[$ws]=$monitor_id
    done
done

# Get numeric workspaces only
for sid in $(aerospace list-workspaces --all | grep -E '^[0-9]+$'); do
    icon_index=$((sid-1))
    if [ $icon_index -lt ${#SPACE_ICONS[@]} ]; then
        icon="${SPACE_ICONS[$icon_index]}"
    else
        icon="$sid"
    fi

    # Get the display ID for this workspace (default to 1 if not found)
    display_id="${workspace_to_display[$sid]:-1}"

    sketchybar --add item space.$sid left \
        --subscribe space.$sid aerospace_workspace_change \
        --set space.$sid \
        icon="$icon" \
        icon.padding_left=8 \
        icon.padding_right=8 \
        background.color=0x44ffffff \
        background.corner_radius=5 \
        background.height=24 \
        background.drawing=off \
        label.drawing=off \
        display="$display_id" \
        click_script="aerospace workspace $sid" \
        script="$PLUGIN_DIR/workspace.sh $sid"
done

# Force update workspace items with current workspace
sketchybar --trigger aerospace_workspace_change FOCUSED_WORKSPACE=$(aerospace list-workspaces --focused)

# Right Side Items
sketchybar --add item time right \
    --set time \
        update_freq=1 \
        script="$PLUGIN_DIR/time.sh" \
        background.drawing=off \
        padding_left=8 \
        padding_right=8 \
    --add item date right \
    --set date \
        update_freq=60 \
        script="$PLUGIN_DIR/date.sh" \
        background.drawing=off \
        padding_left=8 \
        padding_right=8 \
    --add item battery right \
    --set battery \
        update_freq=5 \
        script="$PLUGIN_DIR/battery.sh" \
        background.drawing=off \
        padding_left=8 \
        padding_right=8 \
    --add item wifi right \
    --set wifi \
        update_freq=5 \
        script="$PLUGIN_DIR/wifi.sh" \
        click_script="$PLUGIN_DIR/wifi_click.sh" \
        background.drawing=off \
        padding_left=8 \
        padding_right=8

# Finalize
sketchybar --update
